<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>âš½ ×’×‘×™×¢×™ ×”× ×•×¢×¨ - ×œ×™×™×‘</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container { max-width: 1400px; margin: 0 auto; }
        
        header {
            background: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            text-align: center;
        }
        
        h1 { color: #667eea; font-size: 2.5em; margin-bottom: 10px; }
        .subtitle { color: #666; font-size: 1.2em; }
        .update-time { color: #999; font-size: 0.9em; margin-top: 10px; }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
            text-align: center;
        }
        
        .stat-number { font-size: 3em; font-weight: bold; color: #667eea; }
        .stat-label { color: #666; font-size: 0.9em; margin-top: 10px; }
        
        .matches-container { display: grid; gap: 15px; }
        
        .match-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.1);
        }
        
        .match-card.finished { border-right: 4px solid #4caf50; }
        .match-card.upcoming { border-right: 4px solid #ff9800; }
        
        .match-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 12px;
            border-bottom: 1px solid #f0f0f0;
            flex-wrap: wrap;
            gap: 10px;
        }
        
        .match-category {
            background: #667eea;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: bold;
        }
        
        .match-date { color: #666; font-size: 0.9em; }
        
        .match-status {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8em;
            font-weight: bold;
        }
        
        .status-finished { background: #4caf50; color: white; }
        .status-upcoming { background: #ff9800; color: white; }
        
        .match-content {
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            gap: 15px;
            align-items: center;
        }
        
        .team { text-align: center; }
        .team-name { font-size: 1.1em; font-weight: bold; color: #333; }
        .team.winner .team-name { color: #4caf50; }
        
        .score-box { text-align: center; min-width: 80px; }
        .score { font-size: 2em; font-weight: bold; color: #667eea; }
        .vs { font-size: 1.3em; color: #999; font-weight: bold; }
        
        .match-footer {
            margin-top: 15px;
            padding-top: 12px;
            border-top: 1px solid #f0f0f0;
            font-size: 0.85em;
            color: #666;
        }
        
        .loading {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            color: #667eea;
            font-size: 1.2em;
        }
        
        @media (max-width: 768px) {
            .match-content { grid-template-columns: 1fr; gap: 10px; }
            .stats-grid { grid-template-columns: repeat(2, 1fr); }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>âš½ ×’×‘×™×¢×™ ×”× ×•×¢×¨ 2025/2026</h1>
            <p class="subtitle">××ª×¢×“×›×Ÿ ××•×˜×•××˜×™×ª ×›×œ 5 ×“×§×•×ª</p>
            <p class="update-time" id="updateTime">ğŸ”„ ×˜×•×¢×Ÿ...</p>
        </header>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number" id="totalMatches">-</div>
                <div class="stat-label">×¡×”×´×› ××©×—×§×™×</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="totalCups">-</div>
                <div class="stat-label">×œ×™×’×•×ª</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="finishedMatches">-</div>
                <div class="stat-label">×”×¡×ª×™×™××•</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="upcomingMatches">-</div>
                <div class="stat-label">×¢×ª×™×“×™×™×</div>
            </div>
        </div>

        <div class="matches-container" id="matchesContainer">
            <div class="loading">âš½ ×˜×•×¢×Ÿ ××©×—×§×™×...</div>
        </div>
    </div>

    <script>
        async function loadMatches() {
            try {
                // ××•×©×š ××ª matches.json ×××•×ª×• Repository
                const response = await fetch('matches.json?' + new Date().getTime());
                const matches = await response.json();
                
                // ×¢×“×›×Ÿ ×¡×˜×˜×™×¡×˜×™×§×•×ª
                document.getElementById('totalMatches').textContent = matches.length;
                const uniqueCups = new Set(matches.map(m => m.cupId));
                document.getElementById('totalCups').textContent = uniqueCups.size;
                const finished = matches.filter(m => m.status === 'finished').length;
                document.getElementById('finishedMatches').textContent = finished;
                document.getElementById('upcomingMatches').textContent = matches.length - finished;
                
                // ×¢×“×›×Ÿ ×–××Ÿ
                const now = new Date().toLocaleString('he-IL');
                document.getElementById('updateTime').textContent = `ğŸ• ×¢×•×“×›×Ÿ: ${now}`;
                
                // ×”×¦×’ ××©×—×§×™×
                displayMatches(matches);
            } catch (error) {
                document.getElementById('matchesContainer').innerHTML = `
                    <div class="loading" style="color: #f44336;">
                        âŒ ×©×’×™××” ×‘×˜×¢×™× ×ª × ×ª×•× ×™×<br>
                        <small>× ×¡×” ×œ×¨×¢× ×Ÿ ××ª ×”×“×£</small>
                    </div>
                `;
            }
        }
        
        function displayMatches(matches) {
            const container = document.getElementById('matchesContainer');
            
            if (matches.length === 0) {
                container.innerHTML = '<div class="loading">ğŸ˜• ×œ× × ××¦××• ××©×—×§×™×</div>';
                return;
            }
            
            // ××™×•×Ÿ ×œ×¤×™ ×ª××¨×™×š (××”×—×“×© ×œ×™×©×Ÿ)
            const sorted = matches.sort((a, b) => {
                const dateA = parseDate(a.date);
                const dateB = parseDate(b.date);
                return dateB - dateA;
            });
            
            container.innerHTML = sorted.map(match => createMatchCard(match)).join('');
        }
        
        function createMatchCard(match) {
            const homeWinner = match.score.home !== null && match.score.away !== null && match.score.home > match.score.away;
            const awayWinner = match.score.home !== null && match.score.away !== null && match.score.away > match.score.home;
            
            let scoreHTML = '';
            if (match.score.home !== null) {
                scoreHTML = `
                    <div class="score-box">
                        <div class="score">${match.score.away} - ${match.score.home}</div>
                    </div>
                `;
            } else {
                scoreHTML = `<div class="vs">VS</div>`;
            }
            
            return `
                <div class="match-card ${match.status}">
                    <div class="match-header">
                        <div class="match-category">${match.category}</div>
                        <div class="match-date">ğŸ“… ${match.date} ${match.time ? 'â° ' + match.time : ''}</div>
                        <div class="match-status status-${match.status}">
                            ${match.status === 'finished' ? '×”×¡×ª×™×™×' : '×¢×ª×™×“×™'}
                        </div>
                    </div>
                    <div class="match-content">
                        <div class="team ${homeWinner ? 'winner' : ''}">
                            <div class="team-name">${match.homeTeam}</div>
                        </div>
                        ${scoreHTML}
                        <div class="team ${awayWinner ? 'winner' : ''}">
                            <div class="team-name">${match.awayTeam}</div>
                        </div>
                    </div>
                    <div class="match-footer">
                        ğŸ“ ${match.field || '××’×¨×© ×œ× ×¦×•×™×Ÿ'}
                    </div>
                </div>
            `;
        }
        
        function parseDate(dateStr) {
            const parts = dateStr.split('/');
            return new Date(parts[2], parts[1] - 1, parts[0]);
        }
        
        // ×˜×¢×Ÿ × ×ª×•× ×™× ×‘×˜×¢×™× ×ª ×”×“×£
        loadMatches();
        
        // ×¨×¢× ×Ÿ ×›×œ 30 ×©× ×™×•×ª
        setInterval(loadMatches, 30000);
    </script>
</body>
</html>
